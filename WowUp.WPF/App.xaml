<Application x:Class="WowUp.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WowUp.WPF"
             xmlns:localcv="clr-namespace:WowUp.WPF.Converters">
    <Application.Resources>
        <ResourceDictionary>
            
            <FontFamily x:Key="OpenSans">pack://application:,,,/Assets/Fonts/#Open Sans</FontFamily>
            
            <localcv:InverseBoolConverter x:Key="InverseBool" />
            <localcv:BoolToVisibility x:Key="BoolToVisibilty" />
            <localcv:StringToVisibilty x:Key="StringToVisibilty" />
            <localcv:InverseStringToVisibilty x:Key="InverseStringToVisibilty" />
            <localcv:InverseBoolToVisibility x:Key="InverseBoolToVisibility" />
            <localcv:UriToThumbnailConverter x:Key="UriToThumbnailConverter" />
            <localcv:SortAscendingToVisibilityConverter x:Key="SortAscendingToVisibilityConverter" />
            <localcv:SortDescendingToVisibilityConverter x:Key="SortDescendingToVisibilityConverter" />
            
            <!--Global Styles-->
            <Color x:Key="NavigationPrimary">#6B69D6</Color>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Views/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
